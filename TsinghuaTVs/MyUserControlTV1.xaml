<UserControl
    x:Class="TsinghuaUWP.TsinghuaTVs.MyUserControlTV1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TsinghuaUWP.TsinghuaTVs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid  Padding="3" BorderBrush="Gray" BorderThickness="1" CornerRadius="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Left" Text="{x:Bind mytv.Headline}"
                           Name="HeadlineTextBox"
                           
                           FontSize="18"
                           TextWrapping="Wrap"
                           />
    </Grid>
</UserControl>
